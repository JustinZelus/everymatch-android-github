<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.everymatch.saas.view.BaseTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/no_connection_view_margin"
        android:gravity="center"
        android:textSize="@dimen/no_connection_view_title_text_size"
        app:font="lato_light"
        app:text_color="night_color"
        app:text_key="@string/Connection_Lost"
        tools:text="Connection_Lost" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true" />

    <com.everymatch.saas.view.BaseTextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/connection_lost_text"
        android:textSize="@dimen/no_connection_view_text_size"
        app:text_color="moon_color" />

    <com.everymatch.saas.view.BaseTextView
        android:id="@+id/view_no_connection_button_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/no_connection_view_margin"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textAllCaps="true"
        android:textSize="14dp"
        app:text_color="primary_color"
        app:text_key="@string/Try_again"
        tools:text="Try_again" />

</merge>