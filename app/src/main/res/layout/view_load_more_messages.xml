<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.everymatch.saas.view.BaseRelativeLayout
        android:id="@+id/rlViewLoadMoreMessages"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        app:bg_color="primary_color">

        <com.everymatch.saas.view.BaseTextView
            android:id="@+id/tvViewLoadMoreMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:text_color="white_color"
            app:text_key="@string/LoadMore"
            tools:text="LoadMore" />
    </com.everymatch.saas.view.BaseRelativeLayout>
</LinearLayout>