<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/wrapper"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="140dp"
        android:minWidth="300dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/contentPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="140dp"
            android:minWidth="300dp"
            android:padding="15dp"
            android:orientation="vertical">

            <com.everymatch.saas.view.BaseTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="24sp"
                app:text_color="primary_color"
                tools:text="title" />

            <com.everymatch.saas.view.BaseTextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                tools:text="title" />
        </LinearLayout>

        <com.everymatch.saas.view.BaseLinearLayout
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="vertical"
            app:bg_color="moon_color" />

        <LinearLayout
            android:id="@+id/buttonsPart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <com.everymatch.saas.view.BaseButton
                android:id="@+id/btnNegative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                app:text_color="primary_color" />

            <com.everymatch.saas.view.BaseButton
                android:id="@+id/btnPositive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                app:text_color="primary_color" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>