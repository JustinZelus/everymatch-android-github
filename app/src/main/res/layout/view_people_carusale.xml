<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/people_carousel_height"
    android:layout_height="@dimen/people_carousel_height"
    android:orientation="vertical">

    <com.everymatch.saas.view.SquareImageView
        android:id="@+id/imgMatch"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.everymatch.saas.view.BaseTextView
        android:id="@+id/tvPeopleMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:text="Match"
        app:text_color="white_color" />


</RelativeLayout>