<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/people_carousel_height"
    android:layout_height="@dimen/people_carousel_height"
    android:orientation="vertical">

    <com.everymatch.saas.view.SquareImageView
        android:id="@+id/imgMatch"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#501a1a1a">

        <com.everymatch.saas.view.BaseTextView
            android:id="@+id/tvPeopleMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match"
            app:text_color="white_color"
            android:padding="@dimen/margin_xxs"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</RelativeLayout>