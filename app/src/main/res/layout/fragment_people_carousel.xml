<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".ui.discover.DiscoverActivity">

    <com.everymatch.saas.view.ComponentHeader
        android:id="@+id/fragment_people_carousel_header"
        android:layout_marginTop="@dimen/margin_s"
        android:layout_marginLeft="@dimen/margin_xs"
        android:layout_marginRight="@dimen/margin_xs"
        android:layout_marginBottom="@dimen/margin_xs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_people_carousel_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_l" />

</LinearLayout>
